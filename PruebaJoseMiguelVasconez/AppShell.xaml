<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PruebaJoseMiguelVasconez.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PruebaJoseMiguelVasconez"
    Shell.FlyoutBehavior="Disabled"
    Title="PruebaJoseMiguelVasconez">

    <TabBar>
        <Tab Title="Pagina Main"
             Icon="https://miro.medium.com/v2/resize:fit:1200/0*CME_fwKZ7g75TRuj.jpg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>
        <Tab Title="Pagia Usuario"
             Icon="https://cdn.alfabetajuega.com/alfabetajuega/abj_public_files/multimedia/imagenes/alfabetajuega-praise-the-sun-1-291117.jpg">
            <ShellContent ContentTemplate="{DataTemplate local:UsuarioPage}"/>
        </Tab>
        <Tab Title="Pagina Grid"
             Icon="https://static1.thegamerimages.com/wordpress/wp-content/uploads/2023/01/dark-souls-bosses-we-want-to-fight-for-the-first-time-again-split-image.jpg">
            <ShellContent ContentTemplate="{DataTemplate local:GridPager}"/>
        </Tab>
    </TabBar>
</Shell>
